{
  "name": "new-fullstack-boilerplate",
  "version": "1.0.0",
  "description": "This project was bootstrapped with [Create React App](https://github.com/facebookincubator/create-react-app).",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hayden7913/new-fullstack-boilerplate.git"
  },
  "devDependencies": {
    "mocha": "^4.1.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "body-parser": "^1.17.1",
    "concurrently": "^3.4.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "file-saver": "^1.3.8",
    "is-equal-shallow": "^0.1.3",
    "lodash": "^4.6.1",
    "mongodb": "^2.2.24",
    "mongoose": "^4.8.6",
    "node-fetch": "^1.7.3",
    "node-sass": "^4.6.0",
    "react": "^15.4.2",
    "react-dnd": "^2.1.2",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^15.4.2",
    "react-edit-inline": "^1.0.8",
    "react-router": "^3.0.2",
    "repeat": "0.0.6",
    "sass-loader": "^6.0.6"
  },
  "scripts": {
    "start": "concurrently \"node server.js\"  \"cd client && npm start\"",
    "server": "babel-node server.js",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "build:client": "cd client && npm run build",
    "push:git": "git add . && git commit -m \"updating build for deployment\" && git push origin master || exit 0",
    "push:heroku": "git push heroku master",
    "deploy": "npm run build:client && npm run push:git && npm run push:heroku"
  }
}
